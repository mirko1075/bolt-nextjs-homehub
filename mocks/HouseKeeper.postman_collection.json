          }
        },
        {
          "name": "Get Household Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/households/{{householdId}}",
              "query": [
                {
                  "key": "include",
                  "value": "members,tasks,expenses",
                  "description": "Include related data"
                }
              ]
            },
            "description": "Get household details with optional includes"
          }
        }
      ]
    },
    {
      "name": "Expenses",

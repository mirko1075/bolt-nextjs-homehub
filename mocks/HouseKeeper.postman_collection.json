  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\",\n    \"name\": \"Test User\"\n}"
            },
            "url": "{{baseUrl}}/auth/register",
            "description": "Register a new user"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/auth/login",
            "description": "Login user"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/auth/me",
            "description": "Get current user details"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Clean Kitchen\",\n    \"description\": \"Deep clean the kitchen\",\n    \"difficulty\": 3,\n    \"coins\": 50,\n    \"householdId\": \"{{householdId}}\",\n    \"assignedTo\": \"{{userId}}\"\n}"
            },
            "url": "{{baseUrl}}/tasks",
            "description": "Create a new task with optional assignment"
          }
        },
        {
          "name": "Assign Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"assignedTo\": \"{{userId}}\"\n}"
            },
            "url": "{{baseUrl}}/tasks/{{taskId}}/assign",
            "description": "Assign a task to a user"
          }
        },
        {
          "name": "Unassign Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/tasks/{{taskId}}/unassign",
            "description": "Remove task assignment"
          }
        },
        {
          "name": "Complete Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"rating\": 5,\n    \"comment\": \"Task completed successfully\"\n}"
            },
            "url": "{{baseUrl}}/tasks/{{taskId}}/complete",
            "description": "Complete a task with optional rating"
          }
        },
        {
          "name": "Get Household Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks/household/{{householdId}}",
              "query": [
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter by status (pending, completed)"
                },
                {
                  "key": "assignedTo",
                  "value": "{{userId}}",
                  "description": "Filter by assigned user"
                },
                {
                  "key": "sort",
                  "value": "-createdAt",
                  "description": "Sort order (-createdAt, difficulty, coins)"
                }
              ]
            },
            "description": "Get tasks with filters and sorting"
          }
        }
      ]
    },
    {
